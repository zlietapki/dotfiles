[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[user]
	email = andrey.zloy@gmail.com
	name = Andrey Martemianov

[include]
    path = ~/.config/delta/themes.gitconfig

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
	# features = hoopoe
	# features = mantis-shrimp-lite
	features = mellow-barbet

    navigate = true
	line-numbers = true
	side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
